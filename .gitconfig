[user]
  name = Jody Heavener
	email = j.heavener@gmail.com

[core]
  excludesfile = ~/.gitignore
  editor = code -r -w

[color]
  branch = auto
  diff = auto
  status = auto

[push]
  default = simple
  followTags = true

[branch]
  autosetuprebase = always

[merge]
  log = true

[rebase]
  autosquash = true

[help]
  autocorrect = 1

[alias]
  lease = push --force-with-lease

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
	gpgsign = true
  template = ~/.git_commit_template

[rerere]
	enabled = true

[init]
	defaultBranch = main
